<template>
  <section class="ban">
    <aside class="head">
      <section @click="card">
        <!-- <img
          v-if="agent.sex == 0 && !agent.imgUrl"
          class="headImg"
          src="@/assets/imgs/common/icon/icon_male.png"
        />
        <img
          v-if="agent.sex == 1 && !agent.imgUrl"
          class="headImg"
          src="@/assets/imgs/common/icon/icon_female.png"
        /> -->
        <img
          v-if="!agent.imgUrl"
          class="headImg"
          src="@/assets/imgs/plan/icon/icon_acc.png"
        />

        <img v-if="agent.imgUrl" src="this.imgUrl" />
      </section>
      <div>{{ agent.personName }}</div>
    </aside>
    <aside>
      <a :href="'tel:' + agent.mobile">
        <img class="phone" src="@/assets/imgs/plan/icon/icon_phone.png" />
        <nav>{{ agent.mobile }}</nav>
      </a>
    </aside>

    <!-- app -->
    <aside class="away" @click="jumpTb" v-if="!globalConfig.isWx">
      立即投保
    </aside>
    <!-- wx -->
    <aside class="away" v-else @click="shareWx">
      分享
    </aside>
  </section>
</template>

<script>
export default {
  components: {},
  data() {
    return {};
  },
  props: ["agent"],
  created() {
    this.initPage();
  },
  methods: {
    //跳转投保
    jumpTb() {
      utils.native.closePage({ bookId: this.$route.query.bookId });
    },
    //初始化页面
    initPage() {
      const shareParams = {
        title: "家庭财务保障规划书", // 分享标题
        desc:
          "爱心让家庭更美好, 请点击查看<" +
          decodeURI(this.$route.query.productName) +
          ">", // 分享内容
        link: this.$route.query.timestamp
          ? window.location.href
          : window.location.href + "&timestamp=" + Date.parse(new Date()),
        // 分享链接
        imgUrl: globalConfig.pageUrl + "img/share/logo.png" // 分享图标
      };
      utils.wechat
        .shareFriend(shareParams)
        .then(() => {
          // utils.ui.tips("分享成功");
        })
        .catch(error => {
          utils.ui.tips({
            msg: error,
            type: "error"
          });
        });
    },
    //
    shareWx() {
      utils.ui.tips("请点开右上角按钮进行分享");
    },
    //打开名片页面
    card() {
      this.$router.push({
        name: "personCard",
        params: { agent: this.agent }
      });
    }
  },
  watch: {
    //监听benifitDtoList
    agent: {
      handler(newVal) {
        this.agent = newVal;
        console.log(this.agent);
      },
      // 立即执行
      immediate: true
    }
  }
};
</script>

