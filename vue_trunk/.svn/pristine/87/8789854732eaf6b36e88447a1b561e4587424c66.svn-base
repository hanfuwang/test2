<script>
import { mapState } from "vuex";
export default {
  name: "chooseCustomer",
  components: {},
  data() {
    return {
      result: {},
      id: this.$route.query.id,
      // 加载更多配置项
      loadmoreOpt: {
        loadmoreing: false,
        loadmoreFinish: false,
        bottomDistance: 30,
        loadmoreFinishDesc: "没有更多内容了哦~"
      },
      customerLists: [],
      pageNo: 0,
      pageSize: 20,
      itemInput: "", //搜索框元素
      isSearch: false //默认不显示搜索框
    };
  },
  computed: {
    ...mapState({
      insurant: state => state.plan.insurant,
      applicant: state => state.plan.applicant
    })
  },
  watch: {},
  created() {
    // 初始化页面
    // this.initPage();
    this.searchCusList();
  },
  // 初始化页面
  initPage() {
    // 加载更多
    this.loadmore();
  },
  methods: {
    //点击搜索
    search() {
      if (this.isSearch) {
        this.searchCusList();
      } else {
        this.isSearch = true;
      }
    },
    //新增客户
    addCus() {
      // console.log("111111111111111");
      if (this.id == "0" || this.id == "1") {
        this.$router.push({
          name: "addCustomer",
          query: {
            id: this.id
          }
        });
      } else {
        this.$router.push({
          name: "addCustomer"
        });
      }
    },
    //获取客户列表
    searchCusList() {
      const params = {
        agentCode: "1010000024", //代理人工号
        personId: "e1909a91046d4506a58113ab54f70bb4", //代理人id
        infoId: "", //客户主键id  当flag为1时必填
        attrKey: "", //客户关系
        infoId2: "", //客户2主键id
        flag: "3", //模块标识  1.客户管理转介绍 2.投保客户列表 3.建议书 4.财务分析 5.客户管理 6.日程 7.健康管理
        startNum: this.pageNo, //请求数据开始的位置0、10、20...
        pageSize: this.pageSize, //请求数据一次的条数
        sex: undefined, //性别  财务分析需要用到 0-男 1-女
        isShowFamly: "" //是否显示本人及家庭成员 0-不显示 1-显示
      };
      //请求的方法体
      //CUSMEMBERLIST
      utils.http.post(interfaces.plan.getCustomerList, params).then(res => {
        //console.log(res);
        this.isReq = true;
        for (var i = 0; i < res.returnMap.length; i++) {
          this.customerLists.push(res.returnMap[i]);
        }
        this.pageNo = parseInt(this.pageNo) + this.pageSize;
        //console.log(res.returnMap);
        //console.log(res.returnMap.length);
        if (res.returnMap.length % 10 != 0) {
          this.loadmoreOpt.loadmoreFinish = true;
        }
      });
    },
    //选中客户
    selectedCus(cust) {
      // console.log("--------------");
      // console.log(cust);
      const certNo = cust.certNo,
        name = cust.name;
      this.$emit("yyInfo", { certNo, name });
      //查询回显数据再回调
      this.getCusInfoDetail(cust.infoId, "1");
    },
    getCusInfoDetail(infoId, num) {
      const params = {
        infoId: infoId
      };
      //QUERYMEMBERINFOEDIT
      utils.http.post(interfaces.plan.queryMember, params).then(res => {
        // console.log(res);
        // console.log(this.$route);
        this.result = res.cusMemberInfoList[0];
        this.submitForm(num);
      });
    },
    // 加载更多
    loadmore() {
      // console.log("loadmore");
      if (this.customerLists.length % 10 == 0) {
        this.pageNum = this.pageNum + 1;
        this.loadate(this.pageNum);
      }
    },
    submitForm(num) {
      //  console.log(this.result);
      if (num == "3") {
        //编辑
        this.$router.push({
          name: "addCustomer",
          params: {
            result: this.result,
            num: num
          }
        });
        return;
      }
      //字段统一转换
      //生日
      this.result["birthdate"] = String(this.result.birthday).replace(
        /\s\s*$/,
        ""
      )
        ? String(this.result.birthday).substr(0, 10)
        : "";
      //delete this.result.birthday;
      //新老客户
      this.result["isoldCustomer"] = this.result.category;
      delete this.result.category;
      //console.log(this.result);
      //职业
      //console.log(this.result)
      this.result.cdOccupation = {
        occupationCode: this.result.profession,
        occupationLevel: "",
        occupationName: this.result.professionName,
        occupationRiskLevel: this.result.professionLevel, //这个需要加上去
        occupationRiskMetical: ""
      };

      if (this.id == "0") {
        //选择被保人
        this.$store.commit("plan/setState", {
          attr: "insurant",
          data: Object.assign(
            {
              name: "",
              sex: "0", //性别
              birthdate: "",
              //职业信息
              cdOccupation: {
                occupationCode: "",
                occupationLevel: "",
                occupationName: "",
                occupationRiskLevel: "",
                occupationRiskMetical: ""
              },
              isoldCustomer: "0", //默认是新客户
              holderRelation: ""
            },
            this.result
          )
        });
        this.$store.commit("plan/setState", {
          attr: "applicant",
          data: {
            name: "",
            sex: "0", //性别
            birthdate: "",
            //职业信息
            cdOccupation: {
              occupationCode: "",
              occupationLevel: "",
              occupationName: "",
              occupationRiskLevel: "",
              occupationRiskMetical: ""
            },
            isoldCustomer: "0" //默认是新客户
          }
        });
        //主险清空
        this.$store.commit("plan/setState", {
          attr: "mainProposalProductList",
          data: []
        });
        //附加清空
        this.$store.commit("plan/setState", {
          attr: "riskProposalProductList",
          data: []
        });
        //总保费清空
        this.$store.commit("plan/setState", {
          attr: "totalPremium",
          data: ""
        });
      } else {
        //选择投保人
        this.$store.commit("plan/setState", {
          attr: "applicant",
          data: Object.assign(
            {
              name: "",
              sex: "0", //性别
              birthdate: "",
              //职业信息
              cdOccupation: {
                occupationCode: "",
                occupationLevel: "",
                occupationName: "",
                occupationRiskLevel: "",
                occupationRiskMetical: ""
              },
              isoldCustomer: "0" //默认是新客户
            },
            this.result
          )
        });
        // console.log(this.applicant);
      }
      this.go("makePlan");
    },
    //编辑
    modifyCusInfo(infoId, num) {
      this.getCusInfoDetail(infoId, num);
    }
  }
};
</script>

