  computed: {},
  watch: {},
  created() {
    this.initPage();
  },
  methods: {
    //选择主险
    handleSelectMain(item) {
      this.selectMainCode = item.productCode;
      this.selectPayCode = "";
      this.selectAdditionalCode = "";
      //交费期间列表
      this.payList = item.attList[1].attValueList;
      //附加险列表
      this.additionalInsurancList = item.extraList;
      console.log(item);
    },
    //选择交费时间
    handlePayTime(item) {
      this.selectPayCode = item.code;
      console.log(this.selectPayCode);
    },
    //选择被保人类型
    handleInsurantType(item) {
      this.selectInsurantTypeCode = item.code;
    },
