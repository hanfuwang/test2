<template>
  <section class="risk-send-modal">
    <Modal class="dp-model" :show="showModal">
      <div class="content">
        <div class="top">
          <!-- 封面选择 -->
          <div class="cover">
            <div>
              <img
                src="@/assets/imgs/plan/icon/icon_prev.png"
                width="20px"
                height="20px"
                class="btn"
              />
              <img
                src="@/assets/imgs/global/pic/pic_illegal_request.png"
                width="128px"
                height="83px"
              />
              <img
                src="@/assets/imgs/plan/icon/icon_next.png"
                width="20px"
                height="20px"
                class="btn"
              />
            </div>
            <p>封面选择</p>
          </div>
          <!-- 可选选项1 -->
          <div class="select-item">
            <div
              v-for="(item, index) in setting1"
              :key="index"
              class="one"
              @click="handleCheck(item, index, setting1)"
            >
              <img
                :src="
                  item.checked
                    ? require('@/assets/imgs/common/icon/icon_selected_yes.png')
                    : require('@/assets/imgs/common/icon/icon_selected_no.png')
                "
                alt=""
                class="icon"
              />
              <span class="desc">{{ item.desc }}</span>
            </div>
          </div>
          <!-- 可选选项2 -->
          <div class="select-item">
            <div
              v-for="(item, index) in setting2"
              :key="index"
              class="one"
              @click="handleCheck(item, index, setting2)"
            >
              <img
                :src="
                  item.checked
                    ? require('@/assets/imgs/common/icon/icon_selected_yes.png')
                    : require('@/assets/imgs/common/icon/icon_selected_no.png')
                "
                alt=""
                class="icon"
              />
              <span class="desc">{{ item.desc }}</span>
            </div>
          </div>
          <!-- 可选选项3 -->
          <div class="select-item">
            <div
              v-for="(item, index) in setting3"
              :key="index"
              class="one"
              @click="handleCheck(item, index, setting3)"
            >
              <img
                :src="
                  item.checked
                    ? require('@/assets/imgs/common/icon/icon_selected_yes.png')
                    : require('@/assets/imgs/common/icon/icon_selected_no.png')
                "
                alt=""
                class="icon"
              />
              <span class="desc">{{ item.desc }}</span>
            </div>
          </div>
          <!-- 可选选项4 -->
          <div class="select-item">
            <div
              v-for="(item, index) in setting4"
              :key="index"
              class="one"
              @click="handleCheck(item, index, setting4)"
            >
              <img
                :src="
                  item.checked
                    ? require('@/assets/imgs/common/icon/icon_selected_yes.png')
                    : require('@/assets/imgs/common/icon/icon_selected_no.png')
                "
                alt=""
                class="icon"
              />
              <span class="desc">{{ item.desc }}</span>
            </div>
          </div>
          <!--  -->
          <!-- 必选项1 -->
          <FormSelect
            v-model="incomeDuring"
            :selectList="incomeDuringList"
            label="收益间隔"
            placeholder="请选择收益间隔"
          ></FormSelect>
          <!-- 必选项1 -->
          <FormInput
            v-model="email"
            label="邮箱"
            placeholder="请选择邮箱"
          ></FormInput>
        </div>
        <div class="bottom">
          <button class="cancel" @click="cancel">取消</button>
          <button class="send" @click="sure">发送</button>
        </div>
      </div>
    </Modal>
  </section>
</template>

<script>
import FormInput from "@/components/common/form/FormInput";
import FormSelect from "@/components/common/form/FormSelect";
import Modal from "../common/ui/Modal";
import { mapState } from "vuex";
export default {
  components: {
    Modal,
    FormSelect,
    FormInput
  },
  props: {
    showModal: {
      type: Boolean,
      default: false
    }
  },
  data() {
    return {
      setting1: [
        {
          desc: "封面",
          checked: true,
          disabled: false
        },
        {
          desc: "公司介绍",
          checked: true,
          disabled: false
        }
      ],
      setting2: [
        {
          desc: "保障说明",
          checked: true,
          disabled: false
        },
        {
          desc: "保费明细",
          checked: true,
          disabled: false
        }
      ],
      setting3: [
        {
          desc: "综合利益分析",
          checked: true,
          disabled: false
        },
        {
          desc: "险种利益说明",
          checked: true,
          disabled: false
        }
      ],
      setting4: [
        {
          desc: "保险利益演示表",
          checked: true,
          disabled: true
        },
        {
          desc: "重点内容说明",
          checked: true,
          disabled: false
        }
      ],
      incomeDuringList: [
        {
          code: "1",
          desc: "每年"
        },
        {
          code: "3",
          desc: "三年"
        },
        {
          code: "5",
          desc: "五年"
        },
        {
          code: "10",
          desc: "十年"
        }
      ],
      incomeDuring: "", //收益间隔
      email: "" //邮箱
    };
  },
  computed: {
    ...mapState({
      mainProposalProductList: state => state.plan.mainProposalProductList //主险列表
    })
  },
  created() {
    this.initComponent();
  },
  methods: {
    //初始化
    initComponent() {
      const productCode = this.mainProposalProductList[0].productCode;
      //针对这三款主险不能有利益演示表
      if (
        productCode === "DTRB03" ||
        productCode === "ATRB01" ||
        productCode === "ATIB01"
      ) {
        this.setting4 = [
          {
            desc: "保险利益演示表",
            checked: false,
            disabled: true
          },
          {
            desc: "重点内容说明",
            checked: true,
            disabled: false
          }
        ];
      }
    },
    sure() {
      if (this.incomeDuring == "") {
        utils.ui.confirm("请选择收益间隔");
        return;
      }
      if (this.email == "") {
        utils.ui.confirm("请填写邮箱");
        return;
      }
      // console.log(utils.regExp.get("email").test(this.email));
      if (!utils.regExp.get("email").test(this.email)) {
        utils.ui.confirm("请填写正确邮箱地址");
        return;
      }
      this.$emit("sure", {
        setting1: this.setting1,
        setting2: this.setting1,
        setting3: this.setting1,
        setting4: this.setting1,
        incomeDuring: this.incomeDuring, //收益间隔
        email: this.email
      });
    },
    cancel() {
      this.$emit("cancel");
    },
    handleCheck(item, index, setting) {
      if (item.disabled) return;
      setting[index].checked = !setting[index].checked;
      this[setting] = setting;
    }
  }
};
</script>

