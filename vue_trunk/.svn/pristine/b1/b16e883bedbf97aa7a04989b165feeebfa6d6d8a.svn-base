  margin-bottom: 100px;
}
.nav {
  @include lineheight-height(37px);
  margin: 0 20px;
  padding: 0 15px;
  background: $color-ds;
  font-size: 14px;
  color: #333333;
  border-bottom: 1px solid #dddddd;
  display: flex;
  justify-content: space-between;
  .right {
    color: #ffcc00;
    font-size: 12px;
    img {
      width: 17px;
      height: 17px;
      vertical-align: middle;
    }
  }
}
.edit {
  clear: both;
  margin: 0 20px;
  padding: 0 15px;
  .accountCode {
    float: left;
