          <nav>低档分红</nav>
        </div>
        <div
          @click="selectmiddle"
          :class="{ selected: selmiddle }"
          class="middle"
        >
          <nav>4.5%</nav>
          <nav>中档分红</nav>
        </div>
        <div @click="selecthigh" :class="{ selected: selhigh }">
          <nav>5.5%</nav>
          <nav>高档分红</nav>
        </div>
      </aside>
      <section class="list">
