    initPage() {
      const timestamp = this.$route.query.timestamp;
      if (timestamp && utils.format.getDateTimeBefor(timestamp)) {
        //超过30天
        this.isPageTimeout = true;
      } else {
        this.isPageTimeout = false;
        this.loadata();
